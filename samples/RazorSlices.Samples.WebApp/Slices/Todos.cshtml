@inherits RazorSliceHttpResult<Models.Todo[]>

<h1 class="mt-5">Todos</h1>
<table class="table">
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Due by</th>
        <th>Status</th>
    </tr>
    @foreach (var todo in Model)
    {
        @(await RenderPartialAsync<_TodoRow, Models.Todo>(todo))
    }
</table>

@functions {
    protected override RazorSlice GetLayout()
    {
        var layoutModel = new LayoutModel
            {
                Title = $"Todos ({Model.Length})"
            };
        return _Layout.Create(layoutModel);
    }
}
